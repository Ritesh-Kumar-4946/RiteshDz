<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_splash_bg">


    <RelativeLayout
        android:id="@+id/rl_top_image_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/iv_top_image_login"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_splash_logo" />

        <TextView
            android:id="@+id/tv_app_tittle_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_top_image_login"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/app_tittle_login_select"
            android:textColor="@color/white_clr"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_main_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top_image_login">

        <RelativeLayout
            android:id="@+id/rv_main_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_login_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:padding="20dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_signup_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/login_email"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="10dp">

                    <TextView
                        android:id="@+id/tv_email_login"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:text="@string/signup"
                        android:textColor="@color/white_clr"
                        android:textSize="18sp" />

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/iv_signin_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cv_signup_page"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="@string/sign_in"
                    android:textColor="@color/effect_signin_text_click"
                    android:textSize="18sp" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>